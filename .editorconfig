root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.java]
indent_style = space
indent_size = 4
ij_java_use_single_class_imports = true # Prevents wildcard imports
ij_java_align_multiline_parameters = true

[*.{json,xml,yml}]
indent_style = space
indent_size = 2

[*.toml]
indent_style = space
indent_size = 4

[*.gradle]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false